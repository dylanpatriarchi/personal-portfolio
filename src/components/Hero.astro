---
interface Props {
  title: string;
  subtitle: string;
}

const { 
  title = "DYLAN PATRIARCHI", 
  subtitle = "FREELANCE FULL-STACK DEVELOPER" 
} = Astro.props;

const socialLinks = [
  { name: "GitHub", url: "https://github.com/dylanpatriarchi", icon: "github" },
  { name: "LinkedIn", url: "https://www.linkedin.com/in/dylanpatriarchi/", icon: "linkedin" },
  { name: "Instagram", url: "https://instagram.com/dpatriarchi/", icon: "instagram" }
];
---

<section class="relative overflow-hidden mb-24 grid-pattern">
  <div class="absolute top-0 left-0 w-full h-2 bg-[var(--color-accent)]"></div>
  <div class="absolute bottom-0 right-0 w-full h-2 bg-[var(--color-primary)]"></div>
  
  <!-- Elementi decorativi -->
  <div class="absolute top-20 right-10 w-20 h-20 border-[var(--border-width)] border-black bg-[var(--color-secondary)] transform rotate-12"></div>
  <div class="absolute bottom-20 left-10 w-16 h-16 border-[var(--border-width)] border-black bg-[var(--color-tertiary)] transform -rotate-6"></div>
  <div class="absolute top-40 left-[10%] text-9xl font-black text-black opacity-5 transform -rotate-12">DEV</div>
  
  <div class="max-w-6xl mx-auto px-4 py-24 md:py-32 relative z-10">
    <div class="marquee mb-4">
      <div class="marquee-content text-sm font-bold tracking-widest opacity-60">
        REACT • NEXT.JS • ASTRO • TAILWIND • LARAVEL • FIREBASE • WORDPRESS • REACT NATIVE • JAVASCRIPT • PHP • JAVA • MYSQL • UI/UX • MOBILE APPS • WEB APPS •&nbsp;
      </div>
    </div>
    
    <div class="flex flex-col md:flex-row gap-12 items-start">
      <div class="md:w-2/3">
        <div class="mb-8">
          <h2 class="text-2xl font-bold mb-2 text-[var(--color-primary)]">{subtitle}</h2>
          <h1 class="neo-header mb-6">{title}</h1>
          <p class="text-xl md:text-2xl mb-8 max-w-2xl">
            Creo <span class="font-bold">applicazioni web e mobile</span> moderne, 
            performanti e con un design distintivo. Specializzato in React, Next.js, 
            Laravel e sviluppo mobile con React Native.
          </p>
        </div>
        
        <div class="flex flex-wrap gap-4 mb-8">
          <a href="#progetti" class="neo-btn bg-black text-white">
            I Miei Progetti
          </a>
          <a href="#contatti" class="neo-btn bg-white">
            Parliamo Insieme
          </a>
        </div>
        
        <div class="flex gap-4">
          {socialLinks.map(link => (
            <a 
              href={link.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="w-12 h-12 flex items-center justify-center border-black border-2 bg-white hover:bg-[var(--color-accent)] transition-colors"
              aria-label={link.name}
            >
              <span class="sr-only">{link.name}</span>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                {link.icon === 'github' && (
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                )}
                {link.icon === 'linkedin' && (
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                )}
                {link.icon === 'twitter' && (
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                )}
              </svg>
            </a>
          ))}
        </div>
      </div>
      
      <div class="md:w-1/3">
        <div class="neo-card transform rotate-3 bg-[var(--color-accent)]">
          <div class="neo-card transform -rotate-6 bg-white">
            <div class="text-center">
              <div class="w-32 h-32 mx-auto mb-4 border-[var(--border-width)] border-black overflow-hidden">
                <img 
                  src="/images/dylan.jpg" 
                  alt="Dylan Patriarchi" 
                  class="w-full h-full object-cover"
                />
              </div>
              <h3 class="text-xl font-black mb-2">DYLAN PATRIARCHI</h3>
              <p class="text-sm mb-4">Città di Castello (PG)</p>
              <hr class="border-t-2 border-dashed border-black my-4" />
              <div class="text-left">
                <div class="flex items-center gap-2 mb-2">
                  <div class="w-3 h-3 bg-[var(--color-primary)]"></div>
                  <span class="font-bold">Full-Stack Developer</span>
                </div>
                <div class="flex items-center gap-2 mb-2">
                  <div class="w-3 h-3 bg-[var(--color-secondary)]"></div>
                  <span class="font-bold">Mobile App Developer</span>
                </div>
                <div class="flex items-center gap-2 mb-2">
                  <div class="w-3 h-3 bg-[var(--color-tertiary)]"></div>
                  <span class="font-bold">UI/UX Designer</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 