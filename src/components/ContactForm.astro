---
interface Props {
  title?: string;
}

const { title = "Contattami" } = Astro.props;
---

<section id="contatti" class="mb-24">
  <div class="flex items-center gap-4 mb-12">
    <h2 class="neo-header">{title}</h2>
    <div class="h-1 bg-black flex-grow"></div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <!-- Informazioni di contatto -->
    <div class="space-y-8">
      <div class="neo-card bg-[var(--color-accent)] transform rotate-2">
        <h3 class="text-2xl font-bold mb-6">Informazioni di Contatto</h3>
        
        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 flex-shrink-0 border-black border-[var(--border-width)] flex items-center justify-center bg-white">
